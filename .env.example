# Application Mode (local, production)
VITE_APP_MODE=production

# ⚠️ SECURITY WARNING: Never commit actual API keys to version control!
# Use environment-specific deployment practices for production

# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# External API Endpoints (override for local testing)
# VITE_OPENWEATHER_API_URL=http://localhost:8081
# VITE_SPOTIFY_API_URL=http://localhost:8082
# VITE_GOOGLE_CALENDAR_API_URL=http://localhost:8083
# VITE_OPENROUTER_API_URL=http://localhost:8084
# VITE_MAPBOX_API_URL=http://localhost:8085

# External API Keys (Optional for development)
VITE_OPENWEATHER_API_KEY=your_openweather_api_key
VITE_MAPBOX_TOKEN=your_mapbox_token
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Google Calendar Integration (OAuth)
# ⚠️ CRITICAL: Client secrets should NEVER be exposed in frontend!
# Use server-side OAuth flows or PKCE for public clients
VITE_GOOGLE_CLIENT_ID=your_google_client_id
# VITE_GOOGLE_CLIENT_SECRET=MOVED_TO_SERVER_SIDE
VITE_GOOGLE_REDIRECT_URI=http://localhost:5173/auth/google/callback

# AI Configuration (Optional)
VITE_OPENROUTER_API_KEY=your_openrouter_api_key
VITE_OPENAI_API_KEY=your_openai_api_key

# Development Settings
VITE_NODE_ENV=development
VITE_USE_LIVE_APIS=false
VITE_AI_PROVIDER=mock

# Local Testing Options
VITE_USE_MOCK_DATA=false
VITE_ENABLE_HEALTH_DASHBOARD=false
